
extends walllayout

block content
    include userdetails
    .wrapper
      .box
        .row.row-offcanvas.row-offcanvas-left
          // sidebar
          #sidebar.column.col-sm-2.col-xs-1.sidebar-offcanvas
            ul.nav
              li
                a.visible-xs.text-center(href='#', data-toggle='offcanvas')
                  i.glyphicon.glyphicon-chevron-right
            ul#lg-menu.nav.hidden-xs
                each account in accounts
                  li.active
                    a(href='/user/#{item.user}')
                      img.pull-left(src='//placehold.it/150x150', width='25px', height='25px')
                      | #{account.name}
            ul#sidebar-footer.list-unstyled.hidden-xs
              li
                a(href='http://www.bootply.com')
                  h3 Manthan 4
                  i.glyphicon.glyphicon-heart-empty
                  | Team O_A_A_P_T
            // tiny only nav
            ul#xs-menu.nav.visible-xs
              li
                a.text-center(href='#featured')
                  i.glyphicon.glyphicon-list-alt
              li
                a.text-center(href='#stories')
                  i.glyphicon.glyphicon-list
              li
                a.text-center(href='#')
                  i.glyphicon.glyphicon-paperclip
              li
                a.text-center(href='#')
                  i.glyphicon.glyphicon-refresh
          // /sidebar
          // main right col
          #main.column.col-sm-10.col-xs-11
            // top nav
            .navbar.navbar-blue.navbar-static-top
              .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.navbar-brand.logo(href='/') m
              nav.collapse.navbar-collapse(role='navigation')
                form.navbar-form.navbar-left
                  .input-group.input-group-sm(style='max-width: 360px;')
                    input#srch-term.form-control(type='text', placeholder='Search', name='srch-term')
                    .input-group-btn
                      button.btn.btn-default(type='submit')
                        i.glyphicon.glyphicon-search
                ul.nav.navbar-nav
                  li
                    a(href='/user/#{user.user}')
                      i.glyphicon.glyphicon-home
                      | Home
                  li
                    a(href='#postModal', role='button', data-toggle='modal')
                      i.glyphicon.glyphicon-plus
                      | Post
                  li
                    a(href='#')
                      span.badge badge
                ul.nav.navbar-nav.navbar-right
                  li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      i.glyphicon.glyphicon-user
                    ul.dropdown-menu
                      li
                        a( id='link-logout' href='') Logout
                            i.glyphicon.glyphicon-off.pull-right
            // /top nav
            .padding
              .full.col-sm-9
                // content
                .row
                  // main col left
                  .col-sm-5
                    .panel.panel-default
                      .panel-thumbnail
                        img.img-responsive(src='/assets/example/bg_5.jpg')
                      .panel-body
                        p.lead #{user.name}
                        
                        p User Details: #{user.name}
                        p 45 Followers, 13 Posts
                        p
                          img(src='https://lh3.googleusercontent.com/uFp_tsTJboUY7kue5XAsGA=s28', width='28px', height='28px')
                    .panel.panel-default
                      .panel-heading
                        h4 About Me
                      .panel-body
                        | Bootstrap is front end frameworkto build custom web applications that are fast, responsive & intuitive. It consist of CSS and HTML for typography, forms, buttons, tables, grids, and navigation along with custom-built jQuery plug-ins and support for responsive layouts. With dozens of reusable components for navigation, pagination, labels, alerts etc..
                    .panel.panel-default
                      .panel-heading
                        h4 Social Good
                        p 1,200 Followers, 83 Posts
                        p
                          img(src='https://lh6.googleusercontent.com/-5cTTMHjjnzs/AAAAAAAAAAI/AAAAAAAAAFk/vgza68M4p2s/s28-c-k-no/photo.jpg', width='28px', height='28px')
                          img(src='https://lh4.googleusercontent.com/-6aFMDiaLg5M/AAAAAAAAAAI/AAAAAAAABdM/XjnG8z60Ug0/s28-c-k-no/photo.jpg', width='28px', height='28px')
                          img(src='https://lh4.googleusercontent.com/-9Yw2jNffJlE/AAAAAAAAAAI/AAAAAAAAAAA/u3WcFXvK-g8/s28-c-k-no/photo.jpg', width='28px', height='28px')
                  // main col right
                  .col-sm-7
                    .well
                      form.form-horizontal(role='form')
                        h4 What's New
                        .form-group(style='padding: 14px;')
                          textarea#textbox-post.form-control(placeholder='Update your status')
                        button#button-post.btn.btn-primary.pull-right(type='button') Post
                        ul.list-inline
                          li
                            a(href='')
                              i.glyphicon.glyphicon-upload
                          li
                            a(href='')
                              i.glyphicon.glyphicon-camera
                          li
                            a(href='')
                              i.glyphicon.glyphicon-map-marker

                    
                    each userPost in userPosts
                                .panel.panel-default
                                  .panel-heading
                                    img.pull-left(src='//placehold.it/150x150', width='35px', height='35px')
                                    h4 Posted by #{userPost.postedBy}
                                  .panel-body
                                    .clearfix
                                    p #{userPost.postData}
                                    hr
                                    form
                                      .input-group
                                        .input-group-btn
                                          button.btn.btn-default.t-button-postlike(postid=userPost._id)
                                            i.glyphicon.glyphicon-thumbs-up
                                          button.btn.btn-default.disabled
                                            i.glyphicon 12


                    .well
                      form.form
                        h4 Sign-up
                        .input-group.text-center
                          input.form-control.input-lg(type='text', placeholder='Enter your email address')
                          span.input-group-btn
                            button.btn.btn-lg.btn-primary(type='button') OK
                // /row
                .row
                  .col-sm-6
                    a(href='#') Twitter
                    small.text-muted |
                    a(href='#') Facebook
                    small.text-muted |
                    a(href='#') Google+
                //
                   <div class="row" id="footer">    
                                            <div class="col-sm-6">
                                              
                                            </div>
                                            <div class="col-sm-6">
                                              <p>
                                              <a href="#" class="pull-right">©Copyright 2014</a>
                                              </p>
                                            </div>
                                          </div>
                hr
                h4.text-center
                  | &copy Copyright 2014
                hr
              // /col-9
            // /padding
          // /main
    // post modal
    #postModal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') x
            | Update Status
          .modal-body
            form.form.center-block
              .form-group
                textarea.form-control.input-lg(autofocus='', placeholder='What do you want to share?')
          .modal-footer
            div
              button.btn.btn-primary.btn-sm(data-dismiss='modal', aria-hidden='true') Post
              ul.pull-left.list-inline
                li
                  a(href='')
                    i.glyphicon.glyphicon-upload
                li
                  a(href='')
                    i.glyphicon.glyphicon-camera
                li
                  a(href='')
                    i.glyphicon.glyphicon-map-marker

    

    // script references
block scripts
    script(src='/vendor/javascripts/scripts.js')
    script(src='/js/views/index.js')
    script(src='/js/controllers/indexController.js')
    script(src='/js/form-validators/accountValidator.js')
